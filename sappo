  <script>
    const userId = "user123"; // å®Ÿéš›ã¯ãƒ­ã‚°ã‚¤ãƒ³ãƒ¦ãƒ¼ã‚¶ãƒ¼IDãªã©ã‚’ä½¿ã†æƒ³å®š

    const chatLog = document.getElementById("chat-log");
    const input = document.getElementById("user-input");
    const sendBtn = document.getElementById("send-btn");

    function appendMessage(sender, text) {
      const div = document.createElement("div");
      div.innerHTML = `<strong>${sender}:</strong> ${text}`;
      chatLog.appendChild(div);
      chatLog.scrollTop = chatLog.scrollHeight;
    }

    async function sendMessage() {
      const message = input.value.trim();
      if (!message) return;
      appendMessage("ğŸ§â€â™€ï¸ã‚ãªãŸ", message);
      input.value = "";
      sendBtn.disabled = true;

      try {
        const res = await fetch("/chat", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ userId, message }),
        });
        const data = await res.json();
        if (data.reply) {
          appendMessage("ğŸ§‘â€ğŸ’¼å¤•ä»‹ä½æ­©", data.reply);
        } else {
          appendMessage("ğŸ§‘â€ğŸ’¼å¤•ä»‹ä½æ­©", "ç”³ã—è¨³ã‚ã‚Šã¾ã›ã‚“ãŒå¿œç­”ãŒå¾—ã‚‰ã‚Œã¾ã›ã‚“ã§ã—ãŸã€‚");
        }
      } catch (e) {
        appendMessage("ğŸ§‘â€ğŸ’¼å¤•ä»‹ä½æ­©", "é€šä¿¡ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸã€‚");
      } finally {
        sendBtn.disabled = false;
      }
    }

    sendBtn.addEventListener("click", sendMessage);
    input.addEventListener("keydown", (e) => {
      if (e.key === "Enter") sendMessage();
    });
  </script>
